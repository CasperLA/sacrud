        {% include 'sacrud/forms/list.jinja2' with context %}

    </div>
{% endblock %}

{% block extrascript %}
    <div id="foo"></div>
    <script>
        $(document).ready(function() {
            $("#foo").kendoGrid({
                dataSource: {
                    transport: {
                        read:  {
                            url: '',
                            data: {json: 'on'},
                            dataType: 'json'
                        }
                    }
                }
                , columns: [
                  {field: 'id' }
                  , {field: 'foo' }
                ]
                , sortable: true
                , pageable: {
                    refresh: true
                    , pageSizes: true
                    , pageSize: 1
                    , buttonCount: 5
                }
                // , batch: true
                // , filterable: true  // @petrikoz: this not work for me
                // , columnMenu: true  // @petrikoz: this not work for me
                // , editable: true  //  @petrikoz: this not work without 'update' transport
                , toolbar: ['create', 'save', 'cancel', 'refresh']  // @petrikoz: maybe this required urls
            });
        });
    </script>
{% endblock %}
