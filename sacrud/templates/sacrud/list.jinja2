{% extends "/sacrud/redefineme.jinja2" %}

{% block sa_popup %}
    <div class="popup">
        <div class="popup-background">&nbsp;</div>
        <div class="popup-inner">
            <div class="popup-inner__ie">
                <div class="popup-inner__content">
                    <div class="popup-inner__content-delete">
                        <div>Вы уверены, что хотите удалить следующие объекты:</div>
                        <div class="popup-inner__content-delete-text"></div>
                        <div>Все связанные с ними элементы будут удалены.</div>
                        <div class="popup-inner__content-delete-confirm" data-status="delete">
                            <div class="popup-inner__content-delete-confirm-text">OK</div>
                        </div>
                        <div class="popup-inner__content-delete-cancel">
                            <span class="popup-inner__content-delete-cancel-text">Cancel</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sa_body %}
    {% set table=sa_crud['table'] %}
    {% if hasattr(table, 'sacrud_list_col') %}
        {% set visible_columns=table.sacrud_list_col %}
    {% else %}
        {% set visible_columns=sa_crud['col'] %}
    {% endif %}

    {% if hasattr(table, '__mapper_args__') %}
        {% set isdnd=table.__mapper_args__.order_by %}
    {% endif %}
    <div class="page">
      {% if table.sacrud_list_template %}
        {% include table.sacrud_list_template with context %}
      {% else %}
        {% include '/sacrud/forms/list.jinja2' with context %}
      {% endif %}
    </div>
{% endblock %}

{% block sa_head_css %}
    {{ super() }}
    <link href="{{ request.static_url('sacrud:static/css/popup/popup.css') }}" rel="stylesheet">
{% endblock %}

{% block sa_head_js %}
    <script type="text/javascript" src="{{ request.static_url('sacrud:static/js/jquery/jquery.min.js') }}"></script>
{% endblock %}

{% block extrascript %}
    <script type="text/javascript" src="{{ request.static_url('sacrud:static/js/jquery/jquery-ui-1.10.4.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ request.static_url('sacrud:static/js/selectable.js') }}"></script>
    {# <script type="text/javascript" src="{{ request.static_url('sacrud:static/js/popup.js') }}"></script> #}
{% endblock %}
