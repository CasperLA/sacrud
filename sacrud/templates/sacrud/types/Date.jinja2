{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
    <input
        type="date"
        class="sacrud_date {{ css_styles }}"
        id="sacrud_date_{{ col.name }}"
        name="{{ col.name }}"
        value="{{ value }}"
    />
    <p>Date: <input type="text" id="datepicker"></p>
    <script>
        $(document).ready(function () {
            $("datepicker").datepicker({
                showButtonPanel: true
            });
        });
    </script>
{% endblock %}