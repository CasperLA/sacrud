{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
  <input type="text"
        class="sacrud_datetime {{ css_styles }}"
        id="sacrud_datetime_{{ col.name }}"
        name="{{ col.name }}"
        value="{{ value }}"
        />
    <script>
        $(document).ready(function () {
            var target = sacrud_datetime_{{ col.name }};
            $(target).kendoDateTimePicker({
                value:new Date()
            });
        });
    </script>
{% endblock %}
