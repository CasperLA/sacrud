{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
  <input 
        class="{{ css_styles }}"
        id="sacrud_integer_{{ col.name }}"
        name="{{ col.name }}"
        value="{{ value }}"
        />
	<script>
		$(document).ready(function () {
			var target = sacrud_integer_{{ col.name }};
			/* TODO: Get User System Culture */
			$(target).kendoNumericTextBox({
				format: "0",
				min: 0,
				max: 4611686018427387903,
				step: 1,
				placeholder: "Enter A Integer Value"
			});
		});
	</script>
{% endblock %}
