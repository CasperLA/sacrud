{% set obj=sa_crud['obj'] %}
{% set obj_cls=sa_crud['table'] %}
{% set visible_columns=sa_crud['col'] %}
{% set fk_template = "sacrud/types/ForeignKey.jinja2" %}

<form method="POST" accept-charset="utf-8" enctype="multipart/form-data"
    {% if sa_crud %}
        {% if not obj %}
            action="{{ request.route_url('sa_create', table=obj_cls.__tablename__) }}"
        {% else %}
            action="{{ request.route_url('sa_update', table=obj_cls.__tablename__, id=getattr(obj, sa_crud['pk'])) }}"
        {% endif %}
    {% endif %}>

    {% if sa_crud %}
        <div class="sacrud-grid">
            <div class="sacrud-grid__title">Add a new {{ sa_crud['table'].__tablename__ }}</div>
            <div class="sacrud-grid-toolbar clear-fix">
                <div class="sacrud-grid-toolbar-button">
                    <div class="sacrud-grid-toolbar-button__item">
                         <button type="submit" name="form.submitted" class="sacrud-grid-toolbar-button__item-button">Save</button>
                    </div>
                    <div class="sacrud-grid-toolbar-button__item sacrud-grid-toolbar-button__item_state_disable">
                        <div class="sacrud-grid-toolbar-button__item-name">Delete</div>
                    </div>
                    <div class="sacrud-grid-toolbar-button__item sacrud-grid-toolbar-button__item_state_disable">
                        <div class="sacrud-grid-toolbar-button__item-name">Cancel</div>
                    </div>
                </div>
            </div>
            <div class="sacrud-grid-content">
                <div class="sacrud-grid-content__left">
                    <div class="sacrud-grid-content__left-inner">
                        <table class="sacrud-grid-content-grid" id="sa_index">
                            <tbody class="sacrud-grid-content-grid__body">
                                {% for group, columns in visible_columns %}
                                    <tr><td>{{ group }}</td></tr>
                                    {% for col in columns %}
                                      {% set css_class=[] %}
                                      {# TODO: move to include "set_css_style.jinja2" #}
                                      {% if hasattr(obj_cls, 'sacrud_css_class') %}

                                          {% for key, value in obj_cls.sacrud_css_class.items() %}
                                              {% if col in value %}
                                                  {{ css_class.append(key) }}
                                              {% endif %}
                                          {% endfor %}

                                          {% set css_styles=' '.join(css_class) %}
                                      {% endif %}

                                      <tr class="sacrud-grid-content-grid__body-row">
                                          <td class="sacrud-grid-content-grid__body-item">
                                              <div  class="sacrud-grid-content-grid__body-item-name">
                                                  {% if col.info['sacrud_position']=='inline' %}
                                                      {{ col.info['verbose_name'] or col.sacrud_name }}
                                                  {% else %}
                                                      {{ col.info['verbose_name'] or col.name }}
                                                  {% endif %}
                                              </div>
                                          </td>
                                          <td class="sacrud-grid-content-grid__body-item">
                                              {% if col.info['sacrud_template'] %}
                                                  {% include col.info['sacrud_template'] %}
                                              {% elif col.foreign_keys %}
                                                  {% include fk_template %}
                                              {% else %}
                                                  {% include get_field_template(col.type.__class__.__name__) %}
                                              {% endif %}
                                          </td>
                                      </tr>
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</form>
