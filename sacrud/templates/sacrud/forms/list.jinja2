{% set table=sa_crud['table'] %}

{% if hasattr(table, 'sacrud_list_col') %}
    {% set visible_columns=table.sacrud_list_col %}
{% else %}
    {% set visible_columns=sa_crud['col'] %}
{% endif %}

{% if hasattr(sa_crud['table'], '__mapper_args__') %}
    {% set isdnd=sa_crud['table'].__mapper_args__.order_by %}
{% endif %}

<div class="sacrud-grid">
    <div class="sacrud-grid__title">
        {{ sa_crud['table'].__tablename__ }} administration
    </div>
    <div class="sacrud-grid__action" id="sa_grid_action">
        <a href="{{ request.route_url('sa_create', table=table.__tablename__) }}" class="k-button k-primary">
            Add a new {{ table.__tablename__ }}
        </a>
    </div>
    <div class="sacrud-grid-toolbar">
        <div class="sacrud-grid-toolbar__item">
            <div class="sacrud-grid-toolbar__item-name">Add</div>
        </div>
        <div class="sacrud-grid-toolbar__item">
            <div class="sacrud-grid-toolbar__item-name">Delete</div>
        </div>
        <div class="sacrud-grid-toolbar__item">
            <div class="sacrud-grid-toolbar__item-name">Hide</div>
        </div>
    </div>
    <div class="sacrud-grid-content">
        <div class="sacrud-grid-content__left">
            <div class="sacrud-grid-content__left-inner">
                <table class="sacrud-grid-content-grid" id="sa_index">
                    {% if sa_crud %}
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" />
                                </th>
                                {% for col in visible_columns %}
                                    <th>
                                        {{ col.info.verbose_name or col.name or col.sacrud_name or None }}
                                    </th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in sa_crud['row'] %}
                                {% set row_id = row[sa_crud['pk']] %}
                                <tr id="{{ sa_crud['table'].__tablename__ }}_{{ row_id }}">
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    {% for col in visible_columns %}
                                        <td>
                                            {% if col.__class__.__name__ == 'Column' %}
                                                {% set col_value=row.__getattribute__(col.instance_name) %}
                                            {% endif %}
                                            {% if col.info['sacrud_list_template'] %}
                                                {% include col.info['sacrud_list_template'] %}
                                            {% else %}
                                                {{ col_value|string|truncate(200) }}
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                    <td style="display:none">
                                        {% include 'sacrud/forms/actions.jinja2' with context %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    {% else %}
                        <tr>
                            <td>There are no open objects</td>
                        </tr>
                    {% endif %}
                </table>
            </div>
        </div>
        <div class="sacrud-grid-content__right">
            <div class="sacrud-grid-content-filter">&nbsp;</div>
        </div>
    </div>
</div>
